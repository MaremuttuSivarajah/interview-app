{
  "extends": "@tsconfig/vite-react/tsconfig.json",
  "compilerOptions": {
    "composite": true,     // Required for project references
    "declaration": true,   // Must enable declaration emit
    "declarationMap": true,
    "noEmit": false,       // Allow emitting declaration files
    "emitDeclarationOnly": false,
    "isolatedModules": true
  },
  "include": ["src"]
}